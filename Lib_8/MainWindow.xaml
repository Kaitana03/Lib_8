<Window x:Class="Lib_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lib_8"
        mc:Ignorable="d"
        Title="Work_Clases" Height="200" Width="600" ResizeMode="NoResize" Icon="/free-icon-halal-17050390.png" Background="#FF86AE95">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem x:Name="info" Click="Info" Header="О программе" />
            <MenuItem x:Name="exit" Header="Выход" Click="Exit"/>
        </Menu>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <TextBox x:Name="input_number" />
            <Button Content="Ввод" Click="Input"/>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Максимальное число"/>
            <TextBlock x:Name="outputMax"/>
            <Label Content="Массив"/>
            <TextBlock x:Name="outputMas"/>
        </StackPanel>
 
    </Grid>
</Window>
